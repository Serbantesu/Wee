                        @Html.TextBoxFor(model => model.Password, new { @class = "input", @type="password", @id = "txtPassword", @autocomplete="off" ,@placeholder = "Password", @required=""/*, @onblur = "Password(event, 'txtPassword')"*/})
                    </div>
                    <input id="btnRegistro" class="submit-btn" type="submit" value="Log In" />
                </div>
            </div>
        }
        <script src="/js/Login.js"></script>
    </div>
</body>
</html>

